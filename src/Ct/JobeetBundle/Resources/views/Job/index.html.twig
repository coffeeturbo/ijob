{% extends 'CtJobeetBundle::layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('bundles/ctjobeet/css/jobs.css') }}" type="text/css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block content %}
	<div id="jobs">
		<div class="jobs">
			{% for category in categories %}
				<div>
					<div class="category">
						<div class="feed">
							<a href="">Feed</a>
						</div>
						<h1>{{ category.name }}</h1>
					</div>
					<table class="jobs">
						{% for entity in category.activejobs %}
							<tr class="{{ cycle(['even', 'odd'], loop.index) }}">
								<td class="location">{{ entity.location }}</td>
								<td class="position">
									<a href="{{ path('ct_job_show', { 'id': entity.id,
										'company': entity.companySlug,
										'location': entity.locationSlug,
										'position': entity.positionSlug
									}) }}">
										{{ entity.position }}
									</a>
								</td>
								<td class="company">{{ entity.company }}</td>
							</tr>
						{% endfor %}
					</table>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}